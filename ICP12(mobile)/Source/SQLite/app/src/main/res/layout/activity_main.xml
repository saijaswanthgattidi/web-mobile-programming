<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.vijaya.sqlite.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/firstActivityButton"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text=" Activity of Employer"
                android:textColor="#FFEB3B"
                android:textColorLink="#FFEB3B" />

            <Button
                android:id="@+id/secondActivityButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text="Activity of Employee "
                android:textColor="#FFEB3B" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="129dp"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="175dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="493dp"
            android:text="WELCOME PAGE"
            android:textColor="#FFEB3B"
            android:textSize="20sp" />

    </RelativeLayout>
</layout>
